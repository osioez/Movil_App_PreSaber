<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="50dp"
    tools:context=".ActivityEditQuestions">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pregunta"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/edtPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Redacte la pregunta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="35sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opcion Uno"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/edtOpcUno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escriba el texto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="35sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opcion Dos"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/edtOpcDos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escriba el texto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="35sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opcion Tres"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/edtOpcTres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escriba el texto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="35sp"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Respuesta"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/edtRespuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escriba la respuesta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="35sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/edtArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escriba el area de conocimiento"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="35sp"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnEditarPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="Editar Pregunta" />
        <Button
            android:id="@+id/btnEliminarPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="Eliminar Pregunta" />
        <Button
            android:id="@+id/btnGuardarPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="Guardar Pregunta" />
    </LinearLayout>

</LinearLayout>